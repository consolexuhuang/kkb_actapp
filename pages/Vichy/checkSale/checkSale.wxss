  text-align: center;
  padding-bottom: 46rpx;
  box-sizing: border-box;
  margin: 100rpx auto 45rpx
}
.headImg{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-top: -64rpx;
}
.currentInvitation{
  font-size:42rpx;
  font-family:PingFangSC-Light,PingFangSC;
