}
.exchangeBox{
  width:630rpx;
  background:rgba(255,255,255,1);
  text-align: center;
  padding-bottom: 46rpx;
  box-sizing: border-box;
  margin: 100rpx auto 45rpx
}
.headImg{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-top: -64rpx;
}
.currentInvitation{
  font-size:42prx;
  font-family:PingFangSC-Light,PingFangSC;
  font-weight:300;
  color:rgba(20,20,20,1);
  line-height:68rpx;
  margin:30rpx auto 30rpx;
}
.currentInvitationNum{
  color:rgba(208,2,27,1);
}
.activeRule{
  max-width:520rpx;
  background:rgba(250,250,250,1);
  margin: 0 auto;
  padding: 30rpx 14rpx 25rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.activeRule_titleBox{
  margin-bottom: 20rpx;
}
.activeRule_title{
  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFangSC;
  font-weight:bold;
  color:rgba(20,20,20,1);
  line-height:43rpx;
}
.activeRuleItem{
  display: flex;
  align-items: center;
  font-size:26rpx;
  font-family:PingFangSC-Light,PingFangSC;
  font-weight:300;
  color:rgba(20,20,20,1);
  line-height:37rpx;
  margin-top: 12rpx;
  text-align: left;
  /* letter-spacing: 2rpx; */
}
.point{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #141414;
  margin-right: 10rpx;
  /* margin-top: 15rpx; */
  flex-shrink: 0;
}
.activeRuleNum{
  font-weight: bold;
}
.exchange_tip{
  font-size:22rpx;
  font-family:PingFangSC-Light,PingFangSC;
  font-weight:300;
  color:rgba(51,51,51,1);
  line-height:28rpx;
  text-align: left;
  padding: 0 83rpx;
  margin-bottom: 18rpx;
  display: flex;
  /* align-items: center */
}
.exchangeIconTop{
  align-self: flex-start;
  flex-shrink: 0;
  color:rgba(51,51,51,1);
}
.exchange_tipPlace{
  color: #3C95FD;
}
.exchangeIcon{
  color: #000000;
  font-size:20rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
  align-self: flex-start;
  line-height: 30rpx;
}
.exchangeIconPlace{
  color: #3C95FD;
  font-size:24rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
  align-self: flex-start;
  line-height: 30rpx;
  margin-left: -1rpx;
}
.exchange_tipTop{
  color: #000000
}
.btn{
  width:496rpx;
  background:rgba(255,255,255,1);
  border:3rpx solid rgba(51,51,51,1);
  text-align: center;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(34,34,34,1);
  line-height:80rpx;
  margin: 30rpx auto 0
}
.explainLink{
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(60,149,253,1);
  line-height:26rpx;
  margin-top: 30rpx;
  text-align: center;
}

